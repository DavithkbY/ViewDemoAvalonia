<controls:UserControl x:Class="View.Screens.ScreenB"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                      xmlns:controls="https://github.com/avaloniaui"
                      xmlns:local="clr-namespace:View.Screens"
                      mc:Ignorable="d" 
                      d:DesignHeight="450" d:DesignWidth="800">
        <controls:DockPanel>
                <controls:Button controls:DockPanel.Dock="Top" Content="Go To B" Command="{controls:Binding SwitchToScreenB}" />
                <controls:Button controls:DockPanel.Dock="Bottom" Content="Go To C" Command="{controls:Binding SwitchToScreenC}" />
                <controls:TextBlock FontSize="64" Text="Screen B" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
        </controls:DockPanel>
</controls:UserControl>
